#:kivy 2.1.0
<Image1>:
    name:"image"
    
    GridLayout :
        #orientation : "vertical"
        size : root.width, root.height
        spacing : 1
        cols : 1
        background_color: (0/255, 0/255, 0/255,1)
        canvas.before :
            Color :
                rgba : self.background_color
            Rectangle :
                #source:"./app_images/back3.jpg"
                size : self.size
                pos : self.pos
        BoxLayout:
            orientation: 
            id : box
            #size_hint : (None, None)
            #height : 80
            #width : root.width
            size_hint : (1, 1)
            background_color: (123/255, 104/255, 238/255,.1)
            canvas.before :
                Color :
                    rgba : self.background_color
                Rectangle :
                    size : self.size
                    pos : self.pos
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            