#:kivy 2.1.0
<Modifier1>:
    name:"modifier1"
    
    GridLayout :
        #orientation : "vertical"
        size : root.width, root.height
        spacing : 1
        cols : 1
        background_color: (189/255, 189/255, 185/255,1)
        canvas.before :
            Color :
                rgba : self.background_color
            Rectangle :
                source:"./app_images/back3.jpg"
                size : self.size
                pos : self.pos
        BoxLayout:
            orientation: 
            #size_hint : (None, None)
            #height : 80
            #width : root.width
            size_hint : (1, 1)
            background_color: (123/255, 104/255, 238/255,1)
            canvas.before :
                Color :
                    rgba : self.background_color
                Rectangle :
                    size : self.size
                    pos : self.pos
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            Label:
                text : "Modifier"
                font_size : 50
                bold : True
            Button:
                size_hint:(.2, .7)
                pos_hint : {'x':0, 'y':.1}
                background_normal:''
                background_color: (123/255, 104/255, 238/255,1)
                on_release : app.root.retour_mod() 
                Image:
                    source:"./app_images/retour.png"
                    center_x : self.parent.center_x
                    center_y : self.parent.center_y
                    size_hint:(.2, .7)
                    size : (50, 50)
        ScrollView:
            size_hint : (1, 5)
            BoxLayout:
                orientation:"vertical"
                size_hint : (1, 2.5)
                #height: self.height
                BoxLayout:
                    orientation : "vertical"
                    size_hint : (1, 3)
                    BoxLayout:
                        orientation: "vertical"
                        size_hint : (1, .5)
                        BoxLayout:
                            orientation:
                            Label :
                                id : num
                                text : ""
                                color : (0,0,0,0)
                                background_color: (1, 1, 1, 0)
                                canvas.before :
                                    Color :
                                        rgba : self.background_color
                                    Rectangle :
                                        size : self.size
                                        pos : self.pos
                                    

                        
                        TextInput :
                            id : nom
                            halign : "center"
                            valign: 'bottom'
                            font_size : 30
                            size_hint : (.8,1)
                            pos_hint : {'center_x': .5}
                            hint_text : 'Enter le Nom'
                            background_color: (123/255, 104/255, 238/255,0)
                            canvas.before :
                                Color:
                                    rgba: .5, .5, .5, 1
                                Line:
                                    width: 2
                                    #rectangle: self.x, self.y, self.width, self.height
                                    points: self.x, self.y, self.x + self.width, self.y
                    BoxLayout:
                        orientation: "vertical"
                        padding : 0,10,0,10
                        background_color: (123/255, 104/255, 238/255,0)
                        canvas.before :
                            Color:
                                rgba: .5, .5, .5, 1
                            Line:
                                width: 1
                                points: self.x+ 10, self.y, self.x + self.width - 10, self.y
                    
                        Box:
                            id : photo1
                        
                        Custom1BoxLayout:
                            label_text: "photo 1"
                            param_text: "1"
                            button_action: root.ph1
                            #button_cam: root.Camm
                        
                    BoxLayout:
                        orientation: "vertical"
                        padding : 0,10,0,10
                        canvas.before :
                            Color:
                                rgba: .5, .5, .5, 1
                            Line:
                                width: 1
                                points: self.x+ 10, self.y, self.x + self.width - 10, self.y
                    
                        Box:
                            id : photo2
                            
                        Custom1BoxLayout:
                            label_text: "photo 2"
                            param_text: "2"
                            button_action: root.ph2
                    BoxLayout:
                        orientation: "vertical"
                        padding : 0,10,0,10
                        canvas.before :
                            Color:
                                rgba: .5, .5, .5, 1
                            Line:
                                width: 1
                                points: self.x+ 10, self.y, self.x + self.width - 10, self.y
                    
                        Box:
                            id : photo3
                        
                        Custom1BoxLayout:
                            label_text: "photo 3"
                            param_text: "3"
                            button_action: root.ph3
                    
                    BoxLayout:
                        orientation:
                        padding : {20,5}
                        TextInput :
                            id : desc
                            halign : "center"
                            font_size : 20
                            color : (1,1,1,1)
                            size_hint : (1,1)
                            pos_hint : {'center_x': .5}
                            hint_text : 'Entrer une description'
                            background_color: (123/255, 104/255, 238/255,.3)
                            canvas.before :
                                Color:
                                    rgba: .5, .5, .5, 1
                                Line:
                                    width: 1
                                    rectangle: self.x, self.y, self.width, self.height
                                    #points: self.x, self.y, self.x + self.width, self.y


                BoxLayout:
                    orientation : 
                    size_hint : (.7, .4)
                    pos_hint : {'center_x' : .5}
                    size : root.width, root.height
                    padding : 20,5,20,5
                    #RoundedButton2:
                    RoundedButton2:
                        
                        size_hint : (1,.8 )
                        pos_hint : {'center_y' : .5}
                        text: "Modifier"
                        on_release : app.modifier()
                


     
<Custom1BoxLayout>:
    orientation: "horizontal"
    Widget:
        size_hint_x: .3
    Label:
        text : root.label_text
        size_hint : (.2,1 )
        font_size : 20
    Button:
        #on_press : root.animate(self)
        on_release : root.button_action(self) #root.ph1(self)
        background_color: 0, 0, 0, 0  # Set the background color to transparent
        background_normal:''
        size_hint : (None,None )
        width : self.height +10
        canvas.before :
            Color :
                rgba : (1,1,1,1) #self.background_color
            Rectangle :
                source:"./app_images/importer.png"
                size : self.size
                pos : self.pos
    Button:
        on_release : app.root.Camm1(root.param_text, "mod")
        #on_release :app.root.current = "camra"# root.button_cam(self) #root.ph1(self)
        background_color: 0, 0, 0, 0  # Set the background color to transparent
        background_normal:''
        size_hint : (None,None )
        height : 90
        width : 90
        canvas.before :
            Color :
                rgba : (1,1,1,1) #self.background_color
            Rectangle :
                source:"./app_images/camra.png"
                size : self.size
                pos : self.pos
    Widget:
        size_hint_x: .3
        #width: self.parent.width / 4 
    
